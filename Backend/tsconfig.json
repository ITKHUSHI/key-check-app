{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}

